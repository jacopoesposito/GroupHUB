<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <TextView
        android:id="@+id/text_nome_evento_crea"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Nome Evento"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="8dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginRight="8dp"
        android:layout_marginStart="30dp"
        android:layout_marginEnd="8dp" />
    
    <EditText
        android:id="@+id/nome_evento_crea"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="text"
        android:ems="15"
        app:layout_constraintTop_toBottomOf="@id/text_nome_evento_crea"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="8dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginRight="8dp"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginStart="8dp"
        android:background="@drawable/roundededit_text" />

    <TextView
        android:id="@+id/text_luogo_evento_crea"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Luogo Evento"
        app:layout_constraintTop_toBottomOf="@id/nome_evento_crea"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="8dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginRight="8dp"
        android:layout_marginStart="30dp"
        android:layout_marginEnd="8dp"/>

    <EditText
        android:id="@+id/luogo_evento_crea"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="text"
        android:ems="15"
        app:layout_constraintTop_toBottomOf="@id/text_luogo_evento_crea"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="8dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginRight="8dp"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginStart="8dp"
        android:background="@drawable/roundededit_text" />

    <TextView
        android:id="@+id/text_info_evento_crea"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Inserisci link TripAdvisor o Yelp!"
        app:layout_constraintTop_toBottomOf="@id/luogo_evento_crea"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="8dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginRight="8dp"
        android:layout_marginStart="30dp"
        android:layout_marginEnd="8dp"/>

    <EditText
        android:id="@+id/info_evento_crea"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="text"
        android:ems="15"
        app:layout_constraintTop_toBottomOf="@id/text_info_evento_crea"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="8dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginRight="8dp"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginStart="8dp"
        android:background="@drawable/roundededit_text"/>

    <TextView
        android:id="@+id/text_data_evento_crea"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Data evento"
        app:layout_constraintTop_toBottomOf="@id/info_evento_crea"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="8dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginRight="8dp"
        android:layout_marginStart="30dp"
        android:layout_marginEnd="8dp"/>

    <EditText
        android:id="@+id/data_evento_crea"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="datetime"
        android:ems="15"
        app:layout_constraintTop_toBottomOf="@id/text_data_evento_crea"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="8dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginRight="8dp"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginStart="8dp"
        android:background="@drawable/roundededit_text"/>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/localita_evento_crea"
        android:backgroundTint="@color/colorPrimary"
        android:textColor="@color/colorWhite"
        android:ems="20"
        app:layout_constraintTop_toBottomOf="@id/data_evento_crea"
        android:layout_marginEnd="8dp"
        android:layout_marginRight="8dp"
        android:layout_marginLeft="8dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="30dp"
        android:text="Seleziona localita Evento"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"

        />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/annulla"
        android:backgroundTint="@color/colorPrimary"
        android:textColor="@color/colorWhite"
        android:layout_marginEnd="28dp"
        android:layout_marginRight="8dp"
        android:layout_marginLeft="8dp"
        android:layout_marginStart="28dp"
        android:layout_marginTop="30dp"
        android:text="Annulla"
        android:ems="9"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@id/localita_evento_crea"/>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/avanti"
        android:backgroundTint="@color/colorPrimary"
        android:textColor="@color/colorWhite"
        android:layout_marginEnd="28dp"
        android:layout_marginRight="8dp"
        android:layout_marginLeft="8dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="30dp"
        android:text="Avanti"
        android:ems="9"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/localita_evento_crea" />

</android.support.constraint.ConstraintLayout>